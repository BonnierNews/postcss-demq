{
  "name": "postcss-demq",
  "version": "0.2.1",
  "description": "PostCSS plugin to filter media queries",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "media-queries"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Bonnier News",
  "license": "MIT",
  "repository": "BonnierNews/demq",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "clean-publish": "^3.4.5",
    "eslint": "^8.7.0",
    "eslint-plugin-jest": "^25.7.0",
    "jest": "^27.4.7",
    "jest-cli": "^27.4.7",
    "postcss": "^8.4.5"
  },
  "peerDependencies": {
    "postcss": "^8.4.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off",
      "jest/valid-title": "off",
      "strict": "error",
      "no-var": "error",
      "prefer-const": "error",
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
